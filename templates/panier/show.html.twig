{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>
    <p>Prix_total : {{ panier.prixTotal }} €</p>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produitPanier in produitsPanier %}
            <tr>
                <td>{{ produitPanier.produit.nom }}</td>
                <td>{{ produitPanier.produit.description }}</td>
                <td>{{ produitPanier.produit.prix }}</td>
                <td>{{ produitPanier.quantite }}</td>
                <td><a href="{{ path('app_panier_retirer_produit', {'idProduit': produitPanier.produit.id}) }}">Retirer</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
