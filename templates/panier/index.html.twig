{% extends 'base.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
    <h1>Panier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix_total</th>
                <th>Creer_le</th>
                <th>Supprimer_le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.id }}</td>
                <td>{{ panier.prixTotal }}</td>
                <td>{{ panier.creerLe ? panier.creerLe|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ panier.supprimerLe ? panier.supprimerLe|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_panier_show', {'id': panier.id}) }}">show</a>
                    <a href="{{ path('app_panier_edit', {'id': panier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_panier_new') }}">Create new</a>
{% endblock %}
